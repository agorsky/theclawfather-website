---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
const { title, subtitle, category, phase, date, xPost, description } = post.data;

const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric', month: 'long', day: 'numeric'
});
---

<Layout title={`${title} â€” The Claw Father`} description={description}>
  <div class="post-wrap">
    <nav class="breadcrumb">
      <a href="/">theclawfather.ai</a>
      <span>/</span>
      <span>{phase}</span>
    </nav>

    <header class="post-header">
      <div class="post-meta">
        <span class="post-phase">[{phase}]</span>
        <span class="post-category">{category}</span>
      </div>
      <h1>{title}</h1>
      {subtitle && <p class="post-subtitle">{subtitle}</p>}
      <div class="post-date">{formattedDate}</div>
      {xPost && (
        <a href={xPost} class="x-link" target="_blank" rel="noopener">
          Read the short version on X
        </a>
      )}
    </header>

    <article class="post-body">
      <Content />
    </article>

    <footer class="post-footer">
      <div class="footer-divider"></div>
      <p class="footer-note">Follow the build in real time on <a href="https://x.com/TheClawFatherAI" target="_blank" rel="noopener">@TheClawFatherAI</a>. More articles from <a href="/">[{phase}] Foundation</a>.</p>
    </footer>
  </div>
</Layout>

<style>
  .post-wrap {
    max-width: 680px;
    margin: 0 auto;
    padding: 60px 24px 120px;
  }

  .breadcrumb {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--text-muted);
    margin-bottom: 48px;
    display: flex;
    gap: 8px;
    align-items: center;
  }

  .breadcrumb a { color: var(--text-muted); }
  .breadcrumb a:hover { color: var(--accent-gold); text-decoration: none; }

  .post-header { margin-bottom: 56px; }

  .post-meta {
    display: flex;
    gap: 16px;
    align-items: center;
    margin-bottom: 20px;
  }

  .post-phase {
    font-family: var(--font-mono);
    font-size: 0.72rem;
    color: var(--accent-gold);
    letter-spacing: 0.08em;
  }

  .post-category {
    font-family: var(--font-mono);
    font-size: 0.72rem;
    color: var(--text-muted);
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  h1 {
    font-family: var(--font-serif);
    font-size: clamp(1.8rem, 4vw, 2.6rem);
    color: var(--text);
    margin-bottom: 16px;
    line-height: 1.15;
  }

  .post-subtitle {
    color: var(--text-muted);
    font-size: 1.05rem;
    line-height: 1.6;
    margin-bottom: 20px;
  }

  .post-date {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--text-faint);
    margin-bottom: 20px;
  }

  .x-link {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: 0.78rem;
    color: var(--accent-gold);
    border: 1px solid var(--border);
    padding: 6px 14px;
    border-radius: 4px;
    text-decoration: none;
    transition: border-color 0.2s;
  }

  .x-link:hover {
    border-color: var(--accent-gold);
    text-decoration: none;
  }

  /* Article body */
  .post-body {
    color: var(--text);
    font-size: 1.05rem;
    line-height: 1.8;
  }

  .post-body :global(p) { margin-bottom: 1.4em; }

  .post-body :global(h2) {
    font-family: var(--font-serif);
    font-size: 1.4rem;
    color: var(--text);
    margin: 2.4em 0 0.8em;
    padding-top: 1.2em;
    border-top: 1px solid var(--border);
  }

  .post-body :global(h3) {
    font-size: 1rem;
    font-family: var(--font-mono);
    color: var(--accent-gold);
    letter-spacing: 0.05em;
    margin: 1.8em 0 0.6em;
  }

  .post-body :global(strong) { color: var(--text); font-weight: 600; }

  .post-body :global(ul), .post-body :global(ol) {
    padding-left: 1.4em;
    margin-bottom: 1.4em;
  }

  .post-body :global(li) { margin-bottom: 0.4em; }

  .post-body :global(code) {
    font-family: var(--font-mono);
    font-size: 0.88em;
    background: var(--bg-2);
    border: 1px solid var(--border);
    padding: 2px 6px;
    border-radius: 3px;
    color: var(--mono);
  }

  .post-body :global(hr) {
    border: none;
    border-top: 1px solid var(--border);
    margin: 2.4em 0;
  }

  .post-body :global(a) { color: var(--accent-red); }

  .post-body :global(blockquote) {
    border-left: 2px solid var(--accent-gold);
    padding-left: 1.2em;
    color: var(--text-muted);
    font-style: italic;
    margin: 1.6em 0;
  }

  /* Footer */
  .post-footer { margin-top: 64px; }
  .footer-divider {
    height: 1px;
    background: var(--border);
    margin-bottom: 24px;
  }
  .footer-note {
    font-family: var(--font-mono);
    font-size: 0.78rem;
    color: var(--text-muted);
  }
</style>
